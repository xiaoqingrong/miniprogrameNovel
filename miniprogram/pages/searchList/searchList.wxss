/* miniprogram/pages/searchList/searchList.wxss */
.searchList{
  padding: 0 20px;
}
.book_list{
  border-bottom: 1px solid #ccc;
  margin-top: 10px;
  overflow: hidden;
}
.book_list_img{
  float: left;
  width: 30%;
  height: 140px;
  line-height: 140px;
}
.book_list_img image{
  width: 100%;
  height: 100%; 
}
.book_list_text{
  float: right;
  width: 60%;
  height: 140px;
}
.book_list_text_val{
  display: -webkit-box;
  height: 60px;
  padding: 10px 0;
  line-height: 30px;
  font-size: 30rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.book_list_text_title{
  overflow: hidden;
}
.book_list_text_title view:nth-child(1){
  float: left;
  width: 220rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.book_list_text_title view:nth-child(2){
  float: right;
  padding: 2px 6px;
  font-size: 30rpx;
  border: 1px solid #ccc;
  border-radius: 14px;  
}
.book_list_text_author{
  font-size: 30rpx;
}